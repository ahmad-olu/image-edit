{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "image-edit",
  "version": "0.1.0",
  "identifier": "com.image-edit.app",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/image-edit/browser"
  },

  "app": {

    "windows": [
      {
        "title": "image-edit",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "android": {
      "versionCode": 10001000
    }
  }
}
